rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection - users can only write their own document
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // ============================================
    // MULTI-CANVAS ARCHITECTURE (PR #12)
    // ============================================
    
    // Canvases collection - users can access canvases they're collaborators on
    match /canvases/{canvasId} {
      // Users can read canvases they have access to
      // For queries: allow if authenticated (query filters by collaboratorIds)
      // For get: allow authenticated users to read (needed for shared link access)
      // Access control is enforced at shapes/comments level
      allow list: if request.auth != null;
      allow get: if request.auth != null;
      
      // Users can create canvases (owner is creator)
      allow create: if request.auth != null && 
        request.resource.data.ownerId == request.auth.uid &&
        request.auth.uid in request.resource.data.collaboratorIds;
      
      // Canvas updates:
      // - Owner can update any canvas metadata
      // - Any authenticated user can add themselves to collaboratorIds (for shared links)
      allow update: if request.auth != null && (
        // Owner can update anything
        resource.data.ownerId == request.auth.uid ||
        // Non-owners can only add themselves to collaboratorIds
        (
          // Only collaboratorIds and updatedAt are being modified
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['collaboratorIds', 'updatedAt']) &&
          // User is adding themselves to the array
          request.auth.uid in request.resource.data.collaboratorIds &&
          // User was not already in the array (or was, for idempotency)
          (!(request.auth.uid in resource.data.collaboratorIds) || request.auth.uid in resource.data.collaboratorIds)
        )
      );
      
      // Only owner can delete canvas
      allow delete: if request.auth != null && 
        resource.data.ownerId == request.auth.uid;
      
      // Canvas shapes - scoped to canvas (only collaborators can access)
      match /shapes/{shapeId} {
        // Helper function to check if user is a collaborator
        function isCollaborator() {
          return request.auth != null && 
                 request.auth.uid in get(/databases/$(database)/documents/canvases/$(canvasId)).data.collaboratorIds;
        }
        
        allow read: if isCollaborator();
        allow create: if isCollaborator();
        allow update: if isCollaborator();
        allow delete: if isCollaborator();
      }
      
      // Canvas groups - scoped to canvas (only collaborators can access)
      match /groups/{groupId} {
        function isCollaborator() {
          return request.auth != null && 
                 request.auth.uid in get(/databases/$(database)/documents/canvases/$(canvasId)).data.collaboratorIds;
        }
        
        allow read: if isCollaborator();
        allow create: if isCollaborator() && 
                         request.resource.data.createdBy == request.auth.uid;
        allow update: if isCollaborator();
        allow delete: if isCollaborator();
      }
      
      // Canvas selections - scoped to canvas (only collaborators can access)
      match /selections/{userId} {
        function isCollaborator() {
          return request.auth != null && 
                 request.auth.uid in get(/databases/$(database)/documents/canvases/$(canvasId)).data.collaboratorIds;
        }
        
        allow read: if isCollaborator();
        allow write: if isCollaborator() && request.auth.uid == userId;
      }
      
      // Canvas comments - scoped to canvas (only collaborators can access)
      match /comments/{commentId} {
        function isCollaborator() {
          return request.auth != null && 
                 request.auth.uid in get(/databases/$(database)/documents/canvases/$(canvasId)).data.collaboratorIds;
        }
        
        allow read: if isCollaborator();
        allow create: if isCollaborator() && 
                         request.resource.data.userId == request.auth.uid;
        allow update: if isCollaborator();
        allow delete: if isCollaborator() && 
                         resource.data.userId == request.auth.uid;
      }
      
      // Canvas chat messages - scoped to canvas and private per user
      match /chatMessages/{messageId} {
        function isCollaborator() {
          return request.auth != null && 
                 request.auth.uid in get(/databases/$(database)/documents/canvases/$(canvasId)).data.collaboratorIds;
        }
        
        // Users can only read their own messages if they're a collaborator
        allow read: if isCollaborator() 
          && resource.data.userId == request.auth.uid;
        
        // Users can only create messages for themselves if they're a collaborator
        allow create: if isCollaborator() 
          && request.resource.data.userId == request.auth.uid
          && request.resource.data.role in ['user', 'assistant']
          && request.resource.data.content is string;
        
        // Users can delete their own messages if they're a collaborator
        allow delete: if isCollaborator() 
          && resource.data.userId == request.auth.uid;
        
        // No updates (messages cannot be edited)
        allow update: if false;
      }
    }
    
    // ============================================
    // LEGACY PATHS (for backwards compatibility)
    // TODO: Remove these after data migration
    // ============================================
    
    // Old main canvas document (deprecated)
    match /canvases/main {
      allow read, write: if request.auth != null;
    }
    
    // Old main canvas shapes (deprecated)
    match /canvases/main/shapes/{shapeId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    // Old groups collection (deprecated)
    match /canvases/main/groups/{groupId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && 
                       request.resource.data.createdBy == request.auth.uid;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    // Old selections (deprecated)
    match /canvases/main/selections/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Old comments collection (deprecated)
    match /canvases/main/comments/{commentId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && 
                       request.resource.data.userId == request.auth.uid;
      allow update: if request.auth != null;
      allow delete: if request.auth != null && 
                       resource.data.userId == request.auth.uid;
    }
    
    // Old top-level chat messages (deprecated)
    match /chatMessages/{messageId} {
      allow read: if request.auth != null 
        && resource.data.userId == request.auth.uid;
      
      allow create: if request.auth != null 
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.canvasId is string
        && request.resource.data.role in ['user', 'assistant']
        && request.resource.data.content is string;
      
      allow delete: if request.auth != null 
        && resource.data.userId == request.auth.uid;
      
      allow update: if false;
    }
  }
}
